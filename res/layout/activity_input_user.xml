<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".InputUserActivity" >

    <Button
        android:id="@+id/buOk"
        android:layout_below="@+id/etVnosvzdevka"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/lovingbuttons"
        android:textColor="#FFFFFF"
        android:text="Potrdi" />

    <EditText
        android:id="@+id/etVnosvzdevka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="204dp"
        android:background="@drawable/lovingbuttons"
        android:textColor="#FFFFFF"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tvNapis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etVnosvzdevka"
        android:layout_alignRight="@+id/buOk"
        android:layout_marginBottom="64dp"
        android:text="Vnesi svoj vzdevek"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

</RelativeLayout>